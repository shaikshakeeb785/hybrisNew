<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="de.hybris.platform.integrationbackoffice.widgets.IntegrationObjectEditor">
    <name>Integration Object Editor</name>
    <description>Displays integration objects' integration object items in a tree structure for easy editing.</description>
    <defaultTitle>Integration Object Editor</defaultTitle>
    <author>Hybris</author>
    <version>1.0</version>
    <keywords>
        <keyword>IntegrationObjectEditor</keyword>
    </keywords>
    <view src="IntegrationObjectEditor.zul"/>
    <controller
            class="de.hybris.platform.integrationbackoffice.widgets.editor.controllers.IntegrationObjectEditorController"/>
    <sockets>
        <input id="receiveIntegrationObjectComboBox"
               type="de.hybris.platform.integrationservices.model.IntegrationObjectModel"/>
        <input id="createIntegrationObjectEvent"
               type="de.hybris.platform.integrationbackoffice.widgets.modals.data.CreateIntegrationObjectModalData"/>
        <input id="saveEvent" type="java.lang.String"/>
        <input id="refreshEvent" type="java.lang.String"/>
        <input id="receiveDelete" type="java.lang.String"/>
        <input id="metadataModalEvent" type="java.lang.String"/>
        <input id="openItemTypeIOIModalEvent" type="java.lang.String"/>
        <input id="saveButtonItemTypeMatch" type="java.util.Collection"/>
        <input id="cancelButtonItemTypeMatch" type="java.lang.Object"/>
        <input id="receiveClone" type="java.lang.String"/>
        <input id="cloneIntegrationObjectEvent"
               type="de.hybris.platform.integrationbackoffice.widgets.modals.data.CreateIntegrationObjectModalData"/>
        <input id="renameAttributeEvent"
               type="de.hybris.platform.integrationbackoffice.widgets.modals.data.RenameAttributeModalData"/>
        <input id="retypeAttributeEvent"
               type="de.hybris.platform.integrationbackoffice.widgets.editor.data.SubtypeData"/>
        <input id="filterStateChangeInput"
               type="de.hybris.platform.integrationbackoffice.widgets.editor.data.IntegrationFilterState"/>
        <input id="auditReportEvent" type="java.lang.String"/>
        <input id="addClassificationAttributesEvent" type="java.lang.Object"/>
        <output id="openMetadataViewer" type="de.hybris.platform.integrationservices.model.IntegrationObjectModel"/>
        <output id="openItemTypeIOIModal" type="de.hybris.platform.integrationservices.model.IntegrationObjectModel"/>
        <output id="openCloneModal" type="de.hybris.platform.integrationservices.model.IntegrationObjectModel"/>
        <output id="openAttributeDetails" type="de.hybris.platform.integrationbackoffice.dto.ListItemAttributeDTO"/>
        <output id="openClassificationAttributeDetails"
                type="de.hybris.platform.integrationbackoffice.dto.ListItemClassificationAttributeDTO"/>
        <output id="openRenameAttribute"
                type="de.hybris.platform.integrationbackoffice.widgets.modals.data.RenameAttributeModalData"/>
        <output id="openRetypeAttribute"
                type="de.hybris.platform.integrationbackoffice.widgets.editor.data.SubtypeData"/>
        <output id="filterStateChangeOutput"
                type="de.hybris.platform.integrationbackoffice.widgets.editor.data.IntegrationFilterState"/>
        <output id="enableSaveButton" type="java.lang.Boolean"/>
        <output id="sendClickedItem" type="java.lang.String"/>
    </sockets>
</widget-definition>
